
--管理者のテーブル

create table admin_users (
  id bigserial not null
  , name text not null
  , email text not null
  , password text not null
  , constraint admin_users_PKC primary key (id)
) ;

--利用者のテーブル

create table users (
  id bigserial not null
  , name text not null
  , email text not null
  , password text not null
  , address text not null
  , telephone text not null
  , constraint users_PKC primary key (id)
) ;


